@inject KeyboardService keyboardService

<div class="w-container w-col">
    <div class="w-container w-row">
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('Q')">Q</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('W')">W</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('E')">E</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('R')">R</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('T')">T</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('Z')">Z</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('U')">U</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('I')">I</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('O')">O</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('P')">P</button>
    </div>
    <div class="w-container w-row">
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('A')">A</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('S')">S</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('D')">D</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('F')">F</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('G')">G</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('H')">H</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('J')">J</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('K')">K</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('L')">L</button>
    </div>
    <div class="w-container w-row">
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('\n')">↵</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('Y')">Y</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('X')">X</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('C')">C</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('V')">V</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('B')">B</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('N')">N</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('M')">M</button>
        <button class="w-container w-char w-rectangle" @onclick="() => keyboardService.KeyPressed('\b')">⌫</button>
    </div>
</div>
